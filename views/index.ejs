<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Prefix</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Sex</th>
            <th>Curriculum ID</th>
            <th>Previous School</th>
            <th>Address</th>
            <th>Telephone</th>
            <th>Email</th>
            <th>Line ID</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% students.forEach(student => { %>
        <tr>
            <td><%= student.id %></td>
            <td><%= student.prefix_id %></td>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.date_of_birth %></td>
            <td><%= student.sex %></td>
            <td><%= student.curriculum_id %></td>
            <td><%= student.previous_school %></td>
            <td><%= student.address %></td>
            <td><%= student.telephone %></td>
            <td><%= student.email %></td>
            <td><%= student.line_id %></td>
            <td><%= student.status %></td>
        </tr>
        <% }) %>
    </tbody>
</table>
